<%- include('includes/header') %>
  <%# include('includes/nav') %>

    <div class="">
      <div class="">
        <div class="max-w-full">
          <div class="text-center pt-10 pb-5">
            <h1 class="font-bold text-3xl">Criar conta ou Entrar</h1>
            <p class="">Faça login ou crie sua conta abaixo</p>
          </div>

          <%- include('includes/messages'); %>

          <div class="flex flex-row items-center justify-center gap-40">

            <div class="max-w-80 border px-4 py-2">
              <h4 class="text-2xl text-center font-semibold">Faça seu cadastro</h4>
              <p class="text-sm text-center font-semibold">Se você ainda não tem conta, preencha o formulário abaixo:</p>

              <form  class="form-cadastro" action="/login/register" method="POST" novalidate>
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="flex flex-col pt-2 pb-2">
                  <label class="text-sm px-2">Seu E-mail</label>
                  <input type="email" class="form-control border p-1 rounded-lg" name="email">
                </div>
                <div class="flex flex-col pb-5">
                  <label class="text-sm px-2">Sua Senha</label>
                  <input type="password" class="form-control border p-1 rounded-lg" name="password">
                </div>
                <div class="flex items-end justify-end text-center">
                  <button type="submit" class="bg-[#827ddb] px-4 py-3 rounded-xl text-white font-semibold">Criar minha conta</button>
                </div>
              </form>
            </div>
            <div class="max-w-80 border px-4 py-2">
              <h4 class="text-2xl text-center font-semibold">Entrar no sistema</h4>
              <p class="text-sm text-center font-semibold">Se você já tem uma conta, faça login abaixo:</p>
              
              <form class="form-login" action="/login/login" method="POST" novalidate>
                <input type="hidden" name="_csrf" value=<%= csrfToken %>>
                <div class="flex flex-col pt-2 pb-2">
                  <label class="text-sm px-2">Seu E-mail</label>
                  <input type="email" class="form-control border p-1 rounded-lg" name="email">
                </div>
                <div class="flex flex-col pt-2 pb-2">
                  <label class="text-sm px-2">Sua Senha</label>
                  <input type="password" class="form-control border p-1 rounded-lg" name="password">
                </div>
                <div class="flex items-end justify-end text-center">
                  <button type="submit" class="bg-[#827ddb] px-4 py-3 rounded-xl text-white font-semibold">Entrar</button>
                </div>
              </form>
            </div>

          </div>
        </div>

        <div class=""></div>
      </div>
    </div>

    <%- include('includes/footer') %>